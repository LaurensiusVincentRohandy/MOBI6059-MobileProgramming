<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:columnCount="2"
    tools:context=".MainActivity">

    //MyOrder
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="0"
        android:layout_column="1"
        android:layout_gravity="right"
        android:onClick="onClickMyOrder"
        android:text="@string/myOrder"/>

    //Drinks
    <Button
        android:layout_width="95dp"
        android:layout_height="wrap_content"
        android:layout_row="1"
        android:layout_column="0"
        android:layout_marginTop="5dp"
        android:layout_marginStart="80dp"
        android:onClick="onClickDrinksButton"
        android:text="@string/drinksButton" />

    //Snacks
    <Button
        android:layout_width="95dp"
        android:layout_height="wrap_content"
        android:layout_row="2"
        android:layout_column="0"
        android:layout_marginTop="10dp"
        android:layout_marginStart="80dp"
        android:onClick="onClickSnacksButton"
        android:text="@string/snacksButton" />

    //Foods
    <Button
        android:layout_width="95dp"
        android:layout_height="wrap_content"
        android:layout_row="1"
        android:layout_column="1"
        android:layout_marginTop="5dp"
        android:layout_marginStart="15dp"
        android:onClick="onClickFoodsButton"
        android:text="@string/foodsButton" />

    //TopUp
    <Button
        android:layout_width="95dp"
        android:layout_height="wrap_content"
        android:layout_row="2"
        android:layout_column="1"
        android:layout_marginTop="10dp"
        android:layout_marginStart="15dp"
        android:onClick="onClickTopUpButton"
        android:text="@string/topUpButton" />
</GridLayout>