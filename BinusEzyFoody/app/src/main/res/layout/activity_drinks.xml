<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:columnCount="2"
    tools:context=".DrinksActivity">

    //MyOrder
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="0"
        android:layout_column="1"
        android:layout_gravity="right"
        android:onClick="onClickMyOrder"
        android:text="@string/myOrder"/>

    //Air Mineral
    <ImageView
        android:layout_width="50dp"
        android:layout_height="150dp"
        android:layout_row="1"
        android:layout_column="0"
        android:layout_marginStart="45dp"
        android:src="@drawable/air" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="2"
        android:layout_column="0"
        android:layout_marginStart="25dp"
        android:text="Air Mineral\n Rp2.000"
        android:textAlignment="center"
        android:textSize="20sp" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="3"
        android:layout_column="0"
        android:layout_marginStart="30dp"
        android:onClick="onClickBuyWater"
        android:text="@string/buy" />

    //Jus Apel
    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_row="1"
        android:layout_column="1"
        android:layout_gravity="end"
        android:layout_marginEnd="5dp"
        android:src="@drawable/apel" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="2"
        android:layout_column="1"
        android:layout_gravity="end"
        android:layout_marginEnd="30dp"
        android:text="Jus Apel\n Rp4.000"
        android:textSize="20sp" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="3"
        android:layout_column="1"
        android:layout_gravity="end"
        android:layout_marginEnd="30dp"
        android:onClick="onClickBuyApel"
        android:text="@string/buy" />

    //Jus Mangga
    <ImageView
        android:layout_width="100dp"
        android:layout_height="150dp"
        android:layout_row="4"
        android:layout_column="0"
        android:layout_marginStart="40dp"
        android:src="@drawable/gbr_mangga" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="5"
        android:layout_column="0"
        android:layout_marginStart="20dp"
        android:text="Jus Mangga\n Rp6.000"
        android:textAlignment="center"
        android:textSize="20sp" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="6"
        android:layout_column="0"
        android:layout_marginStart="35dp"
        android:onClick="onClickBuyMango"
        android:text="@string/buy" />

    //Jus Alpukat
    <ImageView
        android:layout_width="55dp"
        android:layout_height="140dp"
        android:layout_row="4"
        android:layout_column="1"
        android:layout_gravity="end"
        android:layout_marginEnd="30dp"
        android:src="@drawable/alpukat" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="5"
        android:layout_column="1"
        android:layout_gravity="end"
        android:layout_marginEnd="5dp"
        android:text="Jus Alpukat\n Rp10.000"
        android:textSize="20sp" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="6"
        android:layout_column="1"
        android:layout_gravity="end"
        android:layout_marginEnd="20dp"
        android:onClick="onClickBuyAlpukat"
        android:text="@string/buy" />
</GridLayout>