<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:columnCount="2"
    tools:context=".FoodsActivity">

    //MyOrder
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="0"
        android:layout_column="1"
        android:layout_gravity="right"
        android:onClick="onClickMyOrder"
        android:text="@string/myOrder"/>

    //Nasi Goreng
    <ImageView
        android:layout_width="165dp"
        android:layout_height="185dp"
        android:layout_row="1"
        android:layout_column="0"
        android:layout_marginStart="5dp"
        android:src="@drawable/gbr_nasgor" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="2"
        android:layout_column="0"
        android:layout_marginStart="40dp"
        android:text="Nasi Goreng\n Rp15.000"
        android:textSize="20sp" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="3"
        android:layout_column="0"
        android:layout_marginStart="45dp"
        android:onClick="onClickBuyNasGor"
        android:text="@string/buy" />

    //Mie Goreng
    <ImageView
        android:layout_width="165dp"
        android:layout_height="185dp"
        android:layout_row="1"
        android:layout_column="1"
        android:layout_gravity="end"
        android:layout_marginEnd="5dp"
        android:src="@drawable/gbr_mie" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="2"
        android:layout_column="1"
        android:layout_gravity="end"
        android:layout_marginEnd="30dp"
        android:text="Mie Goreng\n Rp18.000"
        android:textSize="20sp" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="3"
        android:layout_column="1"
        android:layout_gravity="end"
        android:layout_marginEnd="45dp"
        android:onClick="onClickBuyMie"
        android:text="@string/buy" />

    //Kwetiau Goreng
    <ImageView
        android:layout_width="165dp"
        android:layout_height="185dp"
        android:layout_row="4"
        android:layout_column="0"
        android:layout_marginStart="5dp"
        android:src="@drawable/gbr_kwetiau" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="5"
        android:layout_column="0"
        android:layout_marginStart="25dp"
        android:text="Kwetiau Goreng\n Rp20.000"
        android:textSize="20sp" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="6"
        android:layout_column="0"
        android:layout_marginStart="50dp"
        android:onClick="onClickBuyKwetiau"
        android:text="@string/buy" />

    //Bihun Goreng
    <ImageView
        android:layout_width="165dp"
        android:layout_height="185dp"
        android:layout_row="4"
        android:layout_column="1"
        android:layout_gravity="end"
        android:layout_marginEnd="5dp"
        android:src="@drawable/gbr_bihun" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="5"
        android:layout_column="1"
        android:layout_gravity="end"
        android:layout_marginEnd="20dp"
        android:text="Bihun Goreng\n Rp25.000"
        android:textSize="20sp" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="6"
        android:layout_column="1"
        android:layout_gravity="end"
        android:layout_marginEnd="45dp"
        android:onClick="onClickBuyBihun"
        android:text="@string/buy" />
</GridLayout>